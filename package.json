{
  "name": "skeleton_api",
  "version": "1.0.0",
  "description": "Skeleton Backend API",
  "main": "server.js",
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0",
    "yarn": ">=1.19.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node server",
    "dev": "nodemon server",
    "seed": "node seeder -d && node seeder -i && npm run dev",
    "lint:check": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "prepare": "husky install"
  },
  "author": "Aladdin Sonni <aladdin.sonni@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.1",
    "gravatar": "^1.8.2",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.0.14",
    "morgan": "^1.10.0",
    "node-geocoder": "^3.28.0",
    "nodemailer": "^6.7.2",
    "slugify": "^1.6.3",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0"
  }
}
